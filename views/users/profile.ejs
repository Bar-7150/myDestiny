<% layout("/layouts/boilerplate") %>
    <div class="profile">
        <% if (token==undefined) { %>
            <!-- HTML content to display if the condition is true -->
            <div class="Intro">
                <img src="" alt="" id="banner">
                <img src="" alt="" id="avater">
            </div>



            <div class="logSin">
                
                    <form action="/login" method="GET">
                        <button class="btn ">Login</button>
                    </form>

               
                    <form action="/signup" method="GET">
                        <button class="btn">SignUp</button>
                    </form>

                

            </div>




            <% } else { %>
               
                <!-- HTML content to display if the condition is false -->
                
                <div class="Intro">
                    <img src="" alt="" id="banner">
                    <img src="" alt="" id="avater">
                    <div class="nameAndEmail">
                        <h1 id="profileName">
                           <%=user.username %>
                        </h1>
                        <p id="email">
                            <%=user.email %>
                        </p>

                    </div>
                </div>


                <div>
                    
                    <div class="options">
                        <a href="/listings/new">Add Listing</a>
                        
                    </div> 
                    <div class="options">
                        <a href="/myListings">My Listing</a>
                        
                    </div> 
                    <div class="options">
                           <a href="/myReviews">My Reviews</a>

                       </div> 
                       <div class="options">

                           <a href="/myBookings">My Bookings</a>
                       </div> 
                       <div class="options">

                           <a href="/logout">LogOut</a>
                       </div> 
                       

                    
                </div>

                <% } %>

    </div>